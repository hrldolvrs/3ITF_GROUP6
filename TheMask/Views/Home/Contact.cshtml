@model Contact
<!DOCTYPE html>
<html lang="en">
<style>

    .main-container {
        margin-top: 20px;
        margin-bottom: 20px;
    }
    /*container*/
    #CNCT {
        border-radius: 5px;
        background-color: #f2f2f2; /*container color*/
        padding: 20px;
    }

    div.container {
        width: 800px;
    }

    #contacttext {
        font-weight: bold;
    }

    input[type=text], textarea, #contactdate {
        width: 100%;
        padding: 12px;
        border: 1px solid black;
        border-radius: 4px; /*round borders*/
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical /*user can vertically resize the text area*/
    }

    input[type=submit] {
        background-color: #FF7B34;
        color: white; /*submit text color*/
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    /*when hover the button changes color*/
    input[type=submit]:hover {
        background-color: #000;
    }
</style>

<body style="background-color: #E7DFD8;">
    <div class="main-container">
        <h2 id="HDR" style="font-size: 50px; color:#d17724; font-weight: lighter; text-align: center;">Contact Us!</h2>
        <h4 id="HDR" style="font-weight: lighter; text-align: center;">Let us know what you think!</h4>
        <div class="container" id="CNCT">
            <form asp-action = "Contact" asp-controller = "Home" method = "post">

                <label asp-for = "FullName" id="contacttext">Full Name</label>
                <input asp-for = "FullName" type="text" id="fullname" placeholder="Enter Your Full Name">

                <label asp-for = "ContactEmail" id="contacttext">Email</label>
                <input asp-for = "ContactEmail" type="text" id="email" placeholder="Enter Your Email">

                <label asp-for="ContactDate" id="contacttext">Date</label>
                <input asp-for="ContactDate" id="contactdate"/>

                <label asp-for = "ContactMessage" id="contacttext">Message</label>
                <input asp-for = "ContactMessage" textarea placeholder="Enter Your Message" style="height:200px">

                <input type="submit" value="Submit">

            </form>
        </div>
        <br /><br />
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</body>

</html>